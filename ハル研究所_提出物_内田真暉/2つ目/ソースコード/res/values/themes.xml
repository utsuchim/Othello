<resources>
    <!-- Base application theme. -->
    <style name="Theme.alarm" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantDark</item>
        <item name="colorOnSecondary">@color/colorOnPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white_status_bar</item>
        <!-- Customize your theme here. -->
        <item name="shapeAppearanceSmallComponent" />
    </style>

    <style name="Theme.alarm.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.alarm.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.alarm.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>